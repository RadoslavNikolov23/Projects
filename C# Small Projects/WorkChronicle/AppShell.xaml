<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkChronicle.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkChronicle"
    Shell.FlyoutBehavior="Disabled"
    Title="WorkChronicle">

    <ShellContent
        Route="MainPage" 
        ContentTemplate="{DataTemplate local:MainPage}"/>
    
    <ShellContent
        Route="LoadSavedSchedulePage" 
        ContentTemplate="{DataTemplate local:LoadSavedSchedulePage}"/>

    <ShellContent 
        Route="SchedulePage" 
        ContentTemplate="{DataTemplate local:SchedulePage}"  />

    <ShellContent 
        Route="PickerDatePage" 
        ContentTemplate="{DataTemplate local:PickerDatePage}"  />

    <ShellContent 
        Route="CompensateShiftsPage"  
        ContentTemplate="{DataTemplate local:CompensateShiftsPage}"/>
    
</Shell>
