<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WorkChronicle.ViewModels"
             x:Class="WorkChronicle.MainPage"
             x:DataType="viewmodels:MainPageViewModel"
             Title="MainPage">
    
  <StackLayout Padding="20" Spacing="30">
      
        <Label x:Name="ChoiseLabel" Text="Choise one of the options:" TextColor="Black" FontSize="Medium"/>

        <Button Text="View saved schedules" 
                Command="{Binding ViewSavedSchedulesCommand}"/>

        <Button Text="Pick a new schedule" 
                Command="{Binding PickNewScheduleCommand}"/>

        <Button Text="Exit" 
                Command="{Binding ExitAppCommand}"/>
    </StackLayout>
</ContentPage>
