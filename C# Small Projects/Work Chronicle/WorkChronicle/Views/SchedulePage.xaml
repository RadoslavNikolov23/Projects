            <Button Text="Save Schedule"
                    Command="{Binding SaveShiftScheduleCommand}"/>

            <Button Text="Go Back to Main" 
                    Command="{Binding GoBackButtonCommand}"/>
            
            <Button Text="Comp Views - Wrong"
                    Command="{Binding CompensateShiftCommand}"/>

        </VerticalStackLayout>
