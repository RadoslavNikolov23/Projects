<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="WorkChronicle.Controls.Popups.ShiftInfoPopup"
    Size="330,260"
    Color="White"
    CanBeDismissedByTappingOutsideOfPopup="True">
    
    <VerticalStackLayout 
                        Spacing="17"
                        Padding="10,15,10,15">
        <Label 
             x:Name="InformationLabel" 
             FontAttributes="Bold"
             FontSize="16" 
             HorizontalTextAlignment="Start"
             TextColor="Black"/>
        
        <Label 
            x:Name="ShiftTypeLabel"
            Padding="15,0,0,0"
            FontSize="15" 
            TextColor="Black"/>
        
        <Label 
            x:Name="StartTimeLabel"
            Padding="15,0,0,0"
            FontSize="15" 
            TextColor="Black"/>
        
        <Label 
            x:Name="DurationLabel" 
            Padding="15,0,0,0"
            FontSize="15" 
            TextColor="Black"/>
        
        <Button 
            Text="OK" 
            Clicked="OnCloseClicked"/>
        
    </VerticalStackLayout>
</toolkit:Popup>
