<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WorkChronicle.ViewModels"
             x:Class="WorkChronicle.Views.MainPage"
             x:DataType="viewmodels:MainPageViewModel"
             Title="MainPage">

    <StackLayout Padding="20" Spacing="30">

        <Label Text="{Binding SelectedMonthYear}" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center"/>
        
        <Grid ColumnSpacing="10" RowSpacing="10" Margin="5,10,5,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Bind Days Dynamically -->
            <CollectionView ItemsSource="{Binding CalendarDays}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" 
                             Span="7" 
                             VerticalItemSpacing="5" 
                             HorizontalItemSpacing="4"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:CalendarDay">
                        <Frame Padding="5"
                       BackgroundColor="{Binding BackgroundColor}"
                       BorderColor="Black"
                       CornerRadius="5"
                       HeightRequest="50"
                       WidthRequest="50"
                       VerticalOptions="Center"
                       HorizontalOptions="Center">
                            <Label Text="{Binding Day}" 
                           FontSize="10" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>

        <Label x:Name="ChoiseLabel" 
               Text="Select a Schedule:" 
               TextColor="Black" 
               FontSize="Medium"/>

        <Picker Title="Select Schedule"
         ItemsSource="{Binding ScheduleNames}"
         SelectedItem="{Binding SelectedScheduleName}" />

        <Label Text="(If no schedules appear, none are saved yet)"
        FontSize="14" TextColor="Gray"/>

        <Button Text="Pick a new schedule" 
                Command="{Binding PickNewScheduleCommand}"/>

        <Button Text="Exit" 
                Command="{Binding ExitAppCommand}"/>
      
    </StackLayout>
</ContentPage>
