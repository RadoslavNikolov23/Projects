<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkChronicle.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkChronicle"
    Shell.FlyoutBehavior="Disabled"
    Title="WorkChronicle">

    <ShellContent
        Route="MainPage" 
        ContentTemplate="{DataTemplate local:MainPage}"/>
    
    <ShellContent
        Route="LoadSavedScheduleView" 
        ContentTemplate="{DataTemplate local:LoadSavedScheduleView}"/>

    <ShellContent 
        Route="ScheduleView" 
        ContentTemplate="{DataTemplate local:ScheduleView}"  />

    <ShellContent 
        Route="PickerDateView" 
        ContentTemplate="{DataTemplate local:PickerDateView}"  />

    <ShellContent 
        Route="CompensateShiftsView"  
        ContentTemplate="{DataTemplate local:CompensateShiftsView}"/>
    
</Shell>
