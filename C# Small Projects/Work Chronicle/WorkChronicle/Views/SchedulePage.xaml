                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="6" Margin="3" BackgroundColor="#205b0e">
                            <StackLayout Padding="6" Orientation="Horizontal">
                                <Label Text="{Binding .}" TextColor="White" FontSize="12" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView> -->

            <Label Text="{Binding HoursMessage,Mode=TwoWay}" 
                   FontSize="Medium" 
                   TextColor="Black"/>

            <HorizontalStackLayout
                                Spacing="10"
                                Padding="10"
                                HorizontalOptions="Center"
                                VerticalOptions="End">          

                <Button
                        Text="Compensate Selected Shift"
                        Command="{Binding CompensateButtonCommand}"
                        WidthRequest="150"
                        HeightRequest="50" />

                <Button
                        Text="Edit Selected Shift" 
                        Command="{Binding EditShiftCommand}"
                        WidthRequest="150"
                        HeightRequest="50" />

            </HorizontalStackLayout>
            
            <!--
            <Button Text="Compensate Selected Shift" 
                    Command="{Binding CompensateButtonCommand}"/>

            <Button Text="Edit Selected Shift" 
